{
  "name": "example-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/example-app/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "deleteOutputPath": false,
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "target": "node",
        "outputPath": "dist/apps/example-app",
        "main": "apps/example-app/src/main.ts",
        "tsConfig": "apps/example-app/tsconfig.app.json",
        "webpackConfig": "apps/example-app/webpack.config.js",
        "externalDependencies": "all"
      },
      "configurations": {
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "inspect": false,
          "sourceMap": true
        },
        "production": {
          "optimization": false,
          "extractLicenses": true,
          "inspect": false,
          "sourceMap": false
        }
      }
    },

    "postbuild": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc-alias -p apps/example-app/tsconfig.app.json --outDir dist/apps/example-app"
      },
      "dependsOn": ["build"]
    },

    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "example-app:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "runtimeArgs": [],
          "buildTarget": "example-app:build:development",
          "watch": true
        },
        "production": {
          "buildTarget": "example-app:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
